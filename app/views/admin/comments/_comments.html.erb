<% @comments.each_with_index do |comment, index| -%>
  <% div_for comment, :class => "tableRow #{cycle('odd', 'even')}" do -%>
    <span class = "pct10 textAlignCenter"><%= index + 1 -%></span>
    <span class = "pct40"><h3 class = "title"><%= link_to h(comment.description), [:admin, comment], :title => h(comment.description) -%></h3></span>
    <span class = "pct10 textAlignCenter"><%= comment.author -%></span>
        <span class = "pct15 textAlignCenter"><%= comment.author_email -%></span>
    <span class = "pct10 textAlignCenter"><%= comment.created_at.strftime("%d/%m/%Y") -%></span>          
    <span class = "pct5 textAlignCenter"><%= comment.active -%></span>
    <span class = "pct10 textAlignCenter">
      <%# if current_user.has_ownership?(comment) -%>
        <%= link_to(image_tag("admin/iconEdit.png", :alt => "edit"), [:edit, :admin, comment], :title => "edit comment") -%>
        <%= link_to(image_tag("admin/iconDelete.png", :alt => "X"), [:admin, comment], :title => "edit comment", :method => "delete", :confirm => "Are you sure?\nYou want to delete '##{comment.id}' comment") -%>
      <%# end -%>     
    </span>
  <% end -%>
<% end -%>
<% if @comments.total_pages > 1 %>
  <div class = "tableRow pct100 <%= cycle('odd', 'even') %>">
	  <%= will_paginate(@comments, :class => "pagination textAlignCenter", :id => "pagination") -%>
  </div>
<% end %>