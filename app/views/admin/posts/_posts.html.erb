<% @posts.each_with_index do |post, index| -%>
  <% div_for post, :class => "tableRow #{cycle('odd', 'even')}" do -%>
    <span class = "pct10 textAlignCenter"><%= index + 1 -%></span>
    <span class = "pct50"><h3 class = "title"><%= link_to h(post.title), [:admin, post], :title => h(post.title) -%></h3></span>
    <span class = "pct10 textAlignCenter"><%= post.comments.count -%></span>
    <span class = "pct10 textAlignCenter"><%= post.created_at.strftime("%d/%m/%Y") -%></span>          
    <span class = "pct10 textAlignCenter"><%= post.status -%></span>
    <span class = "pct10 textAlignCenter">
      <% if current_user.has_ownership?(post) -%>
        <%= link_to(image_tag("admin/iconEdit.png", :alt => "edit"), [:edit, :admin, post], :title => "edit post") -%>
        <%= link_to(image_tag("admin/iconDelete.png", :alt => "X"), [:admin, post], :title => "edit post", :method => "delete", :confirm => "Are you sure?\nYou want to delete '#{post.title}' post") -%>
      <% end -%>     
    </span>
  <% end -%>
<% end -%>
<% if @posts.total_pages > 1 %>
  <div class = "tableRow pct100 <%= cycle('odd', 'even') %>">
	  <%= will_paginate(@posts, :class => "pagination textAlignCenter", :id => "pagination") -%>
  </div>
<% end %>